#:kivy 1.0.9
#:import NoTransition kivy.uix.screenmanager.NoTransition



BeerScreenManagement:
	transition: NoTransition()
	BeerStatus:
		id:status
	BeerCalibrate:
		id:calibrate
	BeerOff:
		id:poweroff
	BeerConfig:
		id:config
	BeerSensors:
		id:sensors

<TopActionBar>
	ActionBar:
		id: status_actionbar
		top: root.top
		size: root.width, 50
		background_color: 70/255, 70/255, 70/255, 1
		ActionView:
			use_seperator: True
			ActionPrevious:
				on_release: app.root.current='Status'
				app_icon: "/home/pi/programming/beerpi/onyx_32px_icon.png"
				title: "Onyx's Brewery"
				font_size: 6
				with_previous: False
			ActionButton:
				icon: "./thermometer-squared-black-red-32px.png"
			ActionButton:
				id: piTempButton
				text: "--"

			ActionOverflow:
			ActionButton:
				text: "Timers"
			ActionGroup:
				text: "System & Settings"
				mode: 'spinner'
				ActionButton:
					text: "Sensors"
					on_release: app.root.current='Sensors'
				ActionButton:
					text: "Main Settings"
					on_release: app.open_settings()
					#on_release: app.root.current='Config'
				ActionButton:
					text: "Shutdown"
					on_release: app.root.current='PowerOff'
					background_color:2,0.3,0.3,1

<DefaultRightBar>
	#canvas:

	Button:
		background_normal: ''
		background_color: 0,0,0.2,1
		on_release: app.root.current='Status'
		font_size: 15
		size: 60, 118
		size_hint: None, None
		center_x: root.width-30
		top: root.top
		text: "MAIN"

	Button:
		background_normal: ''
		background_color: 0.2,0,0,1
		on_release: app.root.current='PowerOff'
		font_size: 15
		size: 60, 118
		size_hint: None, None
		center_x: root.width-30
		top: root.top - 240
		text: "POWER\nOFF"
	Button:
		background_normal: ''
		background_color: 0.1,0,0.2,1
		on_release: app.root.current='Config'
		font_size: 15
		size: 60, 118
		size_hint: None, None
		center_x: root.width-30
		top: root.top - 360
		text: "CONFIG"


<ConfigRightBar>
	#canvas:
	#	Color:
	#		rgba: 0.2,0.2,0,1
	#	Rectangle:
	#		pos: self.width-60,0
	#		size: 60,self.height
	Label:
		background_normal: ''
		background_color: 0.2,0.2,0.2,1
		font_size: 15
		size: 60, 38
		size_hint: None, None
		center_x: root.width-30
		top: root.top - 0
		text: "CONFIG"
	Button:
		background_normal: ''
		background_color: 0,0,0.2,1
		on_release: app.root.current='Status'
		font_size: 15
		size: 60, 78
		size_hint: None, None
		center_x: root.width-30
		top: root.top - 40
		text: "MAIN"
	Button:
		background_normal: ''
		background_color: 0.2,0.2,0,1
		on_release: app.root.current='Sensors'
		font_size: 14
		size: 60, 118
		size_hint: None, None
		center_x: root.width-30
		top: root.top - 120
		text: "SENSOR"
	Button:
		background_normal: ''
		background_color: 0.2,0,0,1
		on_release: app.root.current='Calibrate'
		font_size: 11
		size: 60, 118
		size_hint: None, None
		center_x: root.width-30
		top: root.top - 240
		text: "CALIBRATE\nSENSORS"
	Button:
		background_normal: ''
		background_color: 0,0.2,0.2,1
		#on_release: app.root.current='Status'
		font_size: 15
		size: 60, 118
		size_hint: None, None
		center_x: root.width-30
		top: root.top - 360
		text: "TIMERS"

<BeerStatus>
	name: 'Status'
	canvas:
		Color:
			rgba: 0.3,0,0,1
		Rectangle:
			pos: 30,self.height-210
			size: 160,90
		Rectangle:
			pos: 310,self.height-210
			size: 160,90
		Rectangle:
			pos: 550,self.height-210
			size: 110,90
		Rectangle:
			pos: 670,self.height-210
			size: 110,90
		Color:
			rgba: 0,0.3,0,1
#		Rectangle:
#			pos: 0,self.height-280
#			size: 160,90
		Rectangle:
			pos: 30,self.height-310
			size: 160,90
		Rectangle:
			pos: 590,self.height-380
			size: 160,90
		Color:
			rgba: 0,0,0.3,1
		Rectangle:
			pos: 590,self.height-280
			size: 160,60
	FloatLayout:
		Label:
			pos: -290,160
			text: "HLT"
			font_size: 25
		Label:
			pos: -5,160
			text: "BOIL"
			font_size: 25
		Label:
			pos: 265,160
			text: "RIMS"
			font_size: 25
		Label:
			pos: 205,130
			text: "Mash Out"
			font_size: 16
		Label:
			pos: 325,130
			text: "Mash Return"
			font_size: 16
		Label:
			pos: 167,-10
			text: "Flow\nRate"
			font_size: 16
    	Button:
	    	background_normal: ''
		    background_color: 0,0.2,0.2,1
		    on_release: root.subhlt()
		    font_size: 15
		    size: 30, 80
		    size_hint: None, None
		    center_x: 15
		    top: root.top - 225
		    text: "-"
    	Button:
	    	background_normal: ''
		    background_color: 0,0.2,0.2,1
		    on_release: root.addhlt()
		    font_size: 15
		    size: 30, 80
		    size_hint: None, None
		    center_x: 205
		    top: root.top - 225
		    text: "+"
    	Button:
	    	background_normal: ''
		    background_color: 0.1,0.1,0.2,1
		    on_release: root.toggleHLTElement()
		    font_size: 12
		    size: 160, 50
		    size_hint: None, None
		    center_x: 110
		    top: root.top-330
		    text: "ELEMENT CONTROL OFF"
		    id: hltelementbutton
		Label:
			pos: -10,0
			text: "PID"
			font_size: 16
		Label:
			pos: -10,-40
			text: root.pidLabel
			font_size: 16
		ProgressBar:
			id: pidBar
			value: root.pidValue
			min: 0
			max: 100
			pos: 340,-20
			#size: 80,20
			size_hint_x:0.12
    	Button:
	    	background_normal: ''
		    background_color: 0,0.2,0.2,1
		    on_release: root.subboil()
		    font_size: 15
		    size: 25, 80
		    size_hint: None, None
		    center_x: 321
		    top: root.top - 225
		    text: "-"
    	Button:
	    	background_normal: ''
		    background_color: 0,0.2,0.2,1
		    on_release: root.addboil()
		    font_size: 15
		    size: 25, 80
		    size_hint: None, None
		    center_x: 457
		    top: root.top - 225
		    text: "+"
		Button:
	    	background_normal: ''
		    background_color: 0.1,0.1,0.2,1
		    on_release: root.toggleBoilElement()
		    font_size: 12
		    size: 160, 50
		    size_hint: None, None
		    center_x: 390
		    top: root.top-330
		    text: "ELEMENT CONTROL OFF"
		    id: boilelementbutton
    	Button:
	    	background_normal: ''
		    background_color: 0.1,0.1,0.2,1
		    on_release: root.toggleRIMSElement()
		    font_size: 12
		    size: 160, 50
		    size_hint: None, None
		    center_x: 670
		    top: root.top-390
		    text: "ELEMENT CONTROL OFF"
		    id: rimselementbutton
    	Button:
    	    background_normal: ''
    	    background_color: 0.1,0.1,0.2,1
    	    on_release: root.togglePump(0)
    	    font_size: 14
    	    size: 120,60
    	    size_hint: None, None
    	    center_x: 60
    	    top: root.top-422
    	    text: "PUMP 1 OFF"
    	    id: pump1button
    	Button:
    	    background_normal: ''
    	    background_color: 0.1,0.1,0.2,1
    	    on_release: root.togglePump(1)
    	    font_size: 14
    	    size: 120,60
    	    size_hint: None, None
    	    center_x: 220
    	    top: root.top-422
    	    text: "PUMP 2 OFF"
    	    id: pump2button

		Label:
			pos: -10,75
			font_size: 48
			#text: root.boilTempLabel
			text: root.tempLabel[1]
		Label:
			pos: -290,75
			font_size: 48
			#text: root.hltTempLabel
			text: root.tempLabel[0]
		Label:
			pos: 205,78
			font_size: 40
			#text: root.rimsTempLabel
			text: root.tempLabel[2]
		Label:
			pos: 325,78
			font_size: 40
			#text: root.mashTempLabel
			text: root.tempLabel[3]
		Label:
		    pos: -20,-10
		    font_size: 48
		    #text: root.boilSetTempLabel
		    text: root.settempLabel[1]
			opacity: 0
		Label:
		    pos: 270,-95
		    font_size: 48
		    #text: root.rimsSetTempLabel
		    text: root.settempLabel[2]
		Label:
		    pos: -290,-25
		    font_size: 48
		    #text: root.hltSetTempLabel
		    text: root.settempLabel[0]

<BeerCalibrate>
	name: 'Calibrate'

<BeerOff>
	name: 'PowerOff'
	FloatLayout:
	    Label:
	        pos: -60, 50
	        font_size: 20
	        text: "Confirm Shutdown BeerPi?"
    	Button:
	    	background_normal: ''
		    background_color: 0.3,0.1,0.1,1
		    on_release: root.confirmShutdown()
		    font_size: 20
		    size: 150, 70
		    size_hint: None, None
		    center_x: 200
		    top: root.top-230
		    text: "YES"
		    id: shutdownbutton
    	Button:
	    	background_normal: ''
		    background_color: 0.1,0.1,0.2,1
		    on_release: app.root.current='Status'
		    font_size: 20
		    size: 150, 70
		    size_hint: None, None
		    center_x: 460
		    top: root.top-230
		    text: "NO"
		    id: cancelshutdownbutton

