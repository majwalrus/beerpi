<BeerStatus>
	name: 'Status'
	canvas:
		Color:
			rgba: 0.3,0,0,1
		Rectangle:
			pos: 30,self.height-180
			size: 160,120
		Rectangle:
			pos: 290,self.height-180
			size: 160,120
		Rectangle:
			pos: 30,self.height-480
			size: 80,40
		Color:
			rgba: 0,0.3,0,1
		Rectangle:
			pos: 30,self.height-310
			size: 160,120
		Rectangle:
			pos: 290,self.height-310
			size: 160,120
	FloatLayout:
#		Label:
#			pos: 0,230
#			text: "STATUS"
#			font_size: 25
		Label:
			pos: -290,200
			text: "HLT"
			font_size: 25
		Label:
			pos: -30,200
			text: "BOIL"
			font_size: 25
    	Button:
	    	background_normal: ''
		    background_color: 0,0.2,0.2,1
		    on_release: root.subhlt()
		    font_size: 15
		    size: 30, 110
		    size_hint: None, None
		    center_x: 15
		    top: root.top - 195
		    text: "-"
    	Button:
	    	background_normal: ''
		    background_color: 0,0.2,0.2,1
		    on_release: root.addhlt()
		    font_size: 15
		    size: 30, 110
		    size_hint: None, None
		    center_x: 205
		    top: root.top - 195
		    text: "+"
    	Button:
	    	background_normal: ''
		    background_color: 0.1,0.1,0.2,1
		    on_release: root.toggleHLTElement()
		    font_size: 12
		    size: 160, 50
		    size_hint: None, None
		    center_x: 110
		    top: root.top-330
		    text: "ELEMENT CONTROL OFF"
		    id: hltelementbutton
    	Button:
	    	background_normal: ''
		    background_color: 0.1,0.1,0.2,1
		    on_release: root.toggleBoilElement()
		    font_size: 12
		    size: 160, 50
		    size_hint: None, None
		    center_x: 370
		    top: root.top-330
		    text: "ELEMENT CONTROL OFF"
		    id: boilelementbutton

		Label:
			pos: -330,-190
			font_size: 16
			text: "Pi Temp"
		Label:
			pos: -330,-230
			font_size: 20
			text: root.piTempLabel
		Label:
			pos: -30,125
			font_size: 48
			#text: root.boilTempLabel
			text: root.tempLabel[1]
		Label:
			pos: -290,125
			font_size: 48
			#text: root.hltTempLabel
			text: root.tempLabel[0]
		Label:
		    pos: -30,-10
		    font_size: 48
		    text: root.boilSetTempLabel
		Label:
		    pos: -290,-10
		    font_size: 48
		    text: root.hltSetTempLabel

<BeerHLT>
	name: 'HLT'

<BeerOff>
	name: 'PowerOff'
	FloatLayout:
	    Label:
	        pos: -60, 50
	        font_size: 20
	        text: "Confirm Shutdown BeerPi?"
    	Button:
	    	background_normal: ''
		    background_color: 0.3,0.1,0.1,1
		    on_release: root.confirmShutdown()
		    font_size: 20
		    size: 150, 70
		    size_hint: None, None
		    center_x: 200
		    top: root.top-230
		    text: "YES"
		    id: shutdownbutton
    	Button:
	    	background_normal: ''
		    background_color: 0.1,0.1,0.2,1
		    on_release: app.root.current='Status'
		    font_size: 20
		    size: 150, 70
		    size_hint: None, None
		    center_x: 460
		    top: root.top-230
		    text: "NO"
		    id: cancelshutdownbutton

